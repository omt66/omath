{
    "compilerOptions": {        
        "target": "ES2016",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "inlineSourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
